    <section>
      <div class="container-reporte">
        <h2>Reporte diario</h2>
        <h3>Situación meteorológica</h3>
        <h4>Mapa de acumulado semanal</h4>
        <p><img class="mapa" src={{mapa_synop_semanal}}></p>
        <p>{{texto_synop_semanal}}</p>
        <h4>Mapa de pronóstico a 7 días</h4>
        <p><img class="mapa" src={{mapa_suma_gfs}}></p>
        <h3>Situación hidrológica</h3>
        <h4>Tabla de situación y perspectiva a corto plazo</h4>
        <table>
          <thead>
            <td>Estación</td>
            <td>Río</td>
            <td>Lectura (m)</td>
            <td>Alerta</td>
            <td>Evacuación</td>
            <td>Estado</td>
            <td>Perspectiva</td>
            <td></td>
          </thead>
          {{#each tabla_hidro}}
            <tr>
                <td>{{this.estacion_nombre}}</td>
                <td>{{this.rio}}</td>
                <td>{{this.valor}} {{{this.tendencia}}}</td>
                <td>{{this.alerta}}</td>
                <td>{{this.evacuacion}}</td>
                <td>{{{this.estado}}}</td>
                <td>{{this.perspectiva}}</td>
                <td>{{{this.aviso}}}</td>
            </tr>
          {{/each}}
        </table>
        <p>{{texto_hidro}}</p>
        <h4>Hidrogramas</h4>
        {{#each hidrogramas}}
            <p><img class="plot" src={{this}}></p>
        {{/each}}
      </div>
    </section>
